{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                ".."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build}",
                "env": {
                    "CXX": "g++",
                    "CMAKE_GENERATOR": "Ninja"
                },
                // "shell": {
                //     "executable": "zsh",
                //     "args": [
                //         "-C"
                //     ]
                // }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
       }
    ]
}